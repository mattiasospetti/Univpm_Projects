<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    style="@style/AppTheme"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="7dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="7dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/immagine_oggetto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/nome_oggetto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toEndOf="@id/immagine_oggetto"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/nome_venditore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/immagine_oggetto"
            android:layout_below="@id/nome_oggetto"
            android:textSize="15dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/prezzo_stringa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:text="Prezzo: "
            android:layout_toEndOf="@id/immagine_oggetto"
            android:layout_below="@id/nome_venditore"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/prezzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/prezzo_stringa"
            android:layout_below="@id/nome_venditore"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_venditore"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="invisible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>